{
  "name": "blockchess",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "next dev --port 3050",
    "build": "next build",
    "start": "next start --port 3050",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "postinstall": "pnpm rebuild better-sqlite3 || true",
    "db:test": "node scripts/test-database.js",
    "db:migrate": "node scripts/migrate-sqlite-schema.js",
    "mint:process": "node scripts/process-mint-queue.js",
    "docker:build": "docker build -t blockchess:latest -f ../Dockerfile ..",
    "docker:run": "docker run -p 3050:3050 --env-file ../.env blockchess:latest",
    "docker:dev": "docker-compose -f ../docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f ../docker-compose.yml up -d"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@mysten/dapp-kit": "^0.19.11",
    "@mysten/enoki": "^0.12.14",
    "@mysten/sui": "^1.45.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.12",
    "@types/luxon": "^3.7.1",
    "@types/pg": "^8.15.6",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.5.0",
    "chess.js": "^1.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.17",
    "graphql": "link:@mysten/sui/graphql",
    "lucide-react": "^0.468.0",
    "luxon": "^3.7.2",
    "next": "^16.0.8",
    "next-intl": "^4.5.8",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.68.0",
    "react-query-kit": "^3.3.2",
    "rxjs": "^7.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.8.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^16.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "node-gyp": "^12.1.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
