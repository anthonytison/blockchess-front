# Database Configuration
DATABASE_TYPE=sqlite # Options: sqlite, postgres

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
SQLITE_DB_PATH=./blockchess.db

# PostgreSQL Configuration (used when DATABASE_TYPE=postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=blockchess_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_SSL=false

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3050

## GAME
NEXT_PUBLIC_HAL_ID= // Create a new player for the computer then copy/paste the ID here

## COOKIE
COOKIE_DOMAIN=localhost
NEXT_PUBLIC_COOKIE_NAME=ck_blockchess_player

## LOCAL STORAGE
NEXT_PUBLIC_STORAGE_PIXEL=blockchess_pixel_font
NEXT_PUBLIC_STORAGE_QUEUE=blockchess_mint_queue
NEXT_PUBLIC_STORAGE_QUEUE_PROCESSING=blockchess_mint_processing


## SUI 
SUI_NETWORK_URL= // local url endpoint
NEXT_PUBLIC_SUI_NETWORK_TYPE= // localnet | devnet | testnet | mainnet
NEXT_PUBLIC_SUI_NETWORK_LOCALNET_PACKAGE_ID= // The local package ID here
NEXT_PUBLIC_SUI_NETWORK_LOCALNET_BADGE_REGISTRY_ID= // the local badge registry ID here
SUI_NETWORK_MODULE=game
NEXT_PUBLIC_SUI_NETWORK_DEVNET_PACKAGE_ID=
NEXT_PUBLIC_SUI_NETWORK_DEVNET_BADGE_REGISTRY_ID=
NEXT_PUBLIC_SUI_NETWORK_TESTNET_PACKAGE_ID=
NEXT_PUBLIC_SUI_NETWORK_TESTNET_BADGE_REGISTRY_ID=
NEXT_PUBLIC_SUI_NETWORK_MAINNET_PACKAGE_ID=
NEXT_PUBLIC_SUI_NETWORK_MAINNET_BADGE_REGISTRY_ID=

SUI_PRIVATE_KEY=


## SOCKET.IO
MINT_QUEUE_DELAY_MS=1000